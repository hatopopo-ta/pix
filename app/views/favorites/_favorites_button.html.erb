<% if current_user.like?(post) %>
    <%= form_with(model: current_user.favorites.find_by(post_id: post.id), local: true, method: :delete, class: 'mt-2') do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= button_tag '<i class="fa fa-heart"></i>'.html_safe, :type => "submit", 
    :class =>"btn btn-default btn-s-md" %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true, class: 'mt-2') do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= button_tag '<i class="far fa-heart"></i>'.html_safe, :type => "submit", 
    :class =>"btn btn-default btn-s-md" %>
    <% end %>
<% end %>

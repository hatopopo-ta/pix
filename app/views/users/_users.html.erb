<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <%= image_tag user.image.url, :size => '50x50' , alt: "User Icon." %>
        <div class="media-body">
          <div class="ml-2">
            <%= user.name %>
          </div>
          <div class="ml-2">
            <p><%= link_to 'プロフィール', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>